@page "/train"
@page "/train/new"

@rendermode InteractiveServer

<div class="col-md-8 d-flex align-items-center justify-content-between">
    <!-- Back button -->
    <div style="width:330px;">
        <button @onclick="GoBackToCompression"
                class="action-btn primary w-100"
                disabled="@(TrainState.IsPreparingForTraining
                            || TrainState.IsTraining 
                            || TrainState.IsTerminating)">
            Back to Compression
        </button>
    </div>

    <!-- New button or placeholder -->
    @if (TrainState.HasCompleted || TrainState.HasTerminated)
    {
        <div style="width:330px;">
            <button @onclick= "async () => {await NewTrainingAsync();}"
                    class="action-btn primary w-100">
                New Training
            </button>
        </div>
    }
    else
    {
        <!-- invisible placeholder keeps layout identical -->
        <div style="width:330px; visibility:hidden;">
            <button class="action-btn primary w-100"></button>
        </div>
    }
</div>


<h2 class="mb-4">Train Your Model</h2>


<div class="row mt-3">

    @if (TrainState.IsTraining)
    {
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-secondary" disabled style="width:400px">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                &nbsp;Running...
            </button>
            <button @onclick="CancelTraining" 
                class="btn btn-danger"
                disabled="@(TrainState.IsTerminating)"
                style="width: 240px;">
                @(TrainState.IsTerminating ? "Terminating..." : "Terminate")
            </button>
        </div>

    }
    else
    {
        <div class="d-flex align-items-center gap-2">
            <button class="action-btn primary" 
                    style="flex: 0 0 650px"
                    @onclick="()=>StartTrain()"
                    disabled="@(string.IsNullOrEmpty(TrainState.SelectedTrainingType) 
                                || string.IsNullOrEmpty(TrainState.FinalDataId)
                                || TrainState.IsPreparingForTraining
                                || TrainState.IsTraining
                                || TrainState.IsTerminating
                                || TrainState.HasTerminated
                                || TrainState.HasCompleted)">
                Start Training
            </button>
        </div>
    }


    @* @if (TrainState.HasCompleted || TrainState.HasTerminated)
    {
        <div class="col-md-4 d-flex align-items-center">
            <h5>Results (accuracy):</h5>             
        </div>
    }
    else if (TrainState.IsPreparingForTraining || TrainState.IsTraining ||TrainState.IsTerminating)
    {
        <button @onclick="CancelTraining" 
        class="btn btn-danger"
        disabled="@(TrainState.IsTerminating)"
        style="width: 150px;">
        @(TrainState.IsTerminating ? "Terminating..." : "Terminate")
        </button>
    } *@

</div>





<div class="row gx-4 align-items-start">
<!-- Column 1: Dataset Selection -->
<div class="col-md-4 border-end pe-4" style="align-self: flex-start;">
    
    <div class="alert alert-success mt-2">
    <h6 style="color: var(--secondary-color);">Selected Dataset:</h6>
    @if (!string.IsNullOrEmpty(TrainState.FinalDataId) && TrainState.FinalSummary != null)
    {
        <h6>
            <span style="color: var(--secondary-color);"> @TrainState.FinalSummary.DatasetName,</span> 
            <span style="color: var(--secondary-color);"> K = @TrainState.FinalSummary.K, </span>
            <span style="color: var(--secondary-color);"> Norm = @TrainState.FinalSummary.Norm</span>
        </h6>

    }
    else
    {<h6><span style="color: var(--secondary-color);">------------------</span></h6>}
    </div>


    <div style="height: 60px;"></div>  

    @if (allSummaries != null && allSummaries.Any())
    {
        <p>Select a dataset:</p>
        <table class="table table-striped">
            <tbody>
                @{ int index = 0; }
                @foreach (var s in allSummaries)
                {
                    <tr>
                        <td>
                            <strong>@s.DatasetName</strong>, k=@s.K, norm=@s.Norm <br/>
                            @if (index == 0 && firstRowFromDefault)
                            {
                                <span>(from current compressed data)</span>
                            }
                            else
                            {
                                <span>(from container)</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm"
                                    disabled="@(TrainState.IsPreparingForTraining || TrainState.IsTraining || TrainState.HasCompleted)"
                                    @onclick="() => SelectData(s.CompressionJobId)"
                                    >
                                @if (TrainState.FinalDataId == s.CompressionJobId)
                                {
                                    <span>✅</span>
                                }
                                else
                                {
                                    <span>☐</span>
                                }
                            </button>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    }



    <div>
    @if (allSummaries == null || !allSummaries.Any())
    {   
        <p class="text-muted">No datasets available </p>
    }
    </div>

</div>

<!-- Column 2: Training Parameters -->
<div class="col-md-4 border-end px-4">
    <h5>Select a train type: </h5>
    <div class="mb-3">
        <select class="form-select" 
                @bind="TrainState.SelectedTrainingType"
                
                disabled="@(TrainState.IsPreparingForTraining
                        || TrainState.IsTraining
                        || TrainState.HasCompleted)">
            <option value="">-- Choose Type --</option>
            <option value="Standard">Standard Training</option>
            <option value="Adversarial">Adversarial Training</option>
        </select>
    </div>  

    @if (TrainState.SelectedTrainingType == "Standard")
    {
        <div class="mt-3">
            <div class="mb-3">
                <label class="form-label">Optimizer</label>
                <select class="form-select" 
                @bind="TrainState.StandardOptimizer"
                disabled="@(TrainState.IsPreparingForTraining
                    ||TrainState.IsTraining
                    ||TrainState.HasCompleted)">
                    <option>SGD</option>
                    <option>Adam</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">
                    Iterations</label>
                <input type="number" class="form-control" 
                @bind="TrainState.StandardItr"
                disabled="@(TrainState.IsPreparingForTraining
                    ||TrainState.IsTraining
                    ||TrainState.HasCompleted)" />
            </div>
            <div class="mb-3">
                <label class="form-label">Learning Rate</label>
                <input type="number" step="0.001" 
                class="form-control" 
                @bind="TrainState.StandardLr"
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)" />
            </div>
            <div class="mb-3">
                <label class="form-label">Adv test at the final epoch</label>
                <InputSelect class="form-select"
                            @bind-Value="TrainState.RequireFinalAdvAttackTest"
                            disabled="@(TrainState.IsPreparingForTraining
                                        || TrainState.IsTraining
                                        || TrainState.HasCompleted)">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </InputSelect>
            </div>
        </div>
    }

    @if (TrainState.SelectedTrainingType == "Adversarial")
    {
        <div class="mt-3">

            <div class="mb-3">
                <label class="form-label">Attack</label>
                <select class="form-select" 
                @bind="TrainState.AdvAttack"
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)"
                            >
                    <option>PGD-linf</option>
                    <option>PGD-l2</option>
                </select>
            </div>


            <div class="mb-3">
                <label class="form-label">Epsilon (radius)</label>
                <input type="number" step="0.01" 
                class="form-control" 
                @bind="TrainState.AdvEps" 
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)"/>
            </div>


            <div class="mb-3">
                <label class="form-label">Optimizer</label>
                <select class="form-select" 
                @bind="TrainState.AdvOptimizer"
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)">
                    <option>SGD</option>
                    <option>Adam</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Iterations</label>
                <input type="number" class="form-control" 
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)"
                @bind="TrainState.AdvItr" />
            </div>
            <div class="mb-3">
                <label class="form-label">Learning Rate</label>
                <input type="number" step="0.0001" 
                class="form-control" @bind="TrainState.AdvLr"
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)"
                            />
            </div>
            <div class="mb-3">
                <label class="form-label">Alpha</label>
                <input type="number" step="0.0001" 
                class="form-control" @bind="TrainState.AdvAlpha"
                disabled="@(TrainState.IsPreparingForTraining
                            ||TrainState.IsTraining
                            ||TrainState.HasCompleted)" />
            </div>


            <div class="mb-3">
                <label class="form-label">Adv test at the final epoch</label>
                <InputSelect class="form-select"
                            @bind-Value="TrainState.RequireFinalAdvAttackTest"
                            disabled="@(TrainState.IsPreparingForTraining
                                        || TrainState.IsTraining
                                        || TrainState.HasCompleted)">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </InputSelect>
            </div>

        </div>
    }
</div>


<!-- Column 3: Results -->
<div class="col-md-4 ps-4">
   @{
    bool showAlert = TrainState.IsPreparingForTraining
                     || TrainState.IsTraining
                     || TrainState.HasCompleted
                     || TrainState.IsTerminating
                     || TrainState.HasTerminated
                     || TrainState.RequireFinalAdvAttackTest;
    }

    @if (showAlert)
    {
        <div class="alert alert-success mt-2">
            @if (TrainState.IsPreparingForTraining)
            {
                <span>Preparing...</span><br/>
            }
            else if (TrainState.IsTraining)
            {
                <span>Training...</span><br/>
            }        
            else if (TrainState.HasCompleted)
            {
                <span>Training finished!</span><br/> 
            }
            else if (TrainState.IsTerminating)
            {
                <span>Waiting for terminating...</span><br/> 
            }
            else if (TrainState.HasTerminated)
            {
                <span>Training terminated</span><br/> 
            }

            @if (TrainState.IsTraining || TrainState.HasCompleted 
                || TrainState.IsTerminating || TrainState.HasTerminated)
            {
                <span>Elapsed time: ~ @TrainState.ElapsedSeconds s</span> <br/> 
            }

           
            @if (TrainState.HasCompleted || TrainState.HasTerminated)
            {
                <span>Final Epoch (@TrainState.EpochMetrics.Last()["epoch"]):</span> <br/>
                <span>Test_acc = @FormatValue(TrainState.EpochMetrics.Last()["test_acc"])</span> 
            }
            @if ((TrainState.HasCompleted || TrainState.HasTerminated) && TrainState.RequireFinalAdvAttackTest)
            {
               
                <span>, Adv_linf_test = @FormatValue(TrainState.EpochMetrics.Last()["linf_adv_acc"])</span><br/>
            }
            else{
                <span>&nbsp;</span><br />
                <span>&nbsp;</span><br />
            }
                   
        </div>
    }


    @if (TrainState.EpochMetrics.Any())
    {

        @if (!string.IsNullOrEmpty(SaveMessage))
        {
            <div style="display: flex;  align-items: center;">
                <p class="text-danger mb-0">@SaveMessage</p>
            </div>
        }
        else{
            <div style="display: flex;  align-items: center;">
                <span>&nbsp;</span><br />
            </div>  
        }
        <table class="table text-center ">
            <thead>
                <tr>
                    <th>
                        <button 
                            @onclick="SaveModel" 
                            disabled="@(HasSavedModel ||TrainState.IsPreparingForTraining || TrainState.IsTraining || TrainState.IsTerminating)"                               
                            class="action-btn primary"
                            style="width: 90px; height: 45px;">
                            Save
                        </button> 
                    </th>
                    <th style="vertical-align: middle;">Epoch</th>
                    <th style="vertical-align: middle;">Train</th>
                    <th style="vertical-align: middle;">Test</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Enumerable.Range(0, TrainState.EpochMetrics.Count).Reverse().ToList() )

                {
                    var epoch = TrainState.EpochMetrics[i];
                    bool isLast = (i == TrainState.EpochMetrics.Count - 1) 
                            && (TrainState.HasCompleted|| TrainState.HasTerminated);
                    
                    
                    <tr class="@((isLast) ? "table-success" : "")">
                        <td>
                            <button class="btn btn-outline-primary btn-sm"
                                    disabled="@(TrainState.IsPreparingForTraining || TrainState.IsTraining || TrainState.IsTerminating || HasSavedModel)"
                                    @onclick="() => SelectEpoch(i)"
                                    >                                
                                    @if (selectedEpoch == i)
                                        {
                                            <span>✅</span>
                                        }
                                        else
                                        {
                                            <span>☐</span>
                                        }
                            </button>
                        </td>
                        <td>@epoch["epoch"]</td>
                        <td>@FormatValue(epoch["train_acc"])</td>
                        <td>@FormatValue(epoch["test_acc"])</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>
</div>


