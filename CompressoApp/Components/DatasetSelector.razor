@rendermode InteractiveServer
@using CompressoApp.Services
@using CompressoApp.Models


<select value="@Value" @onchange="OnChange" class="form-select" disabled="@Disabled">
    <option value="">-- Select a dataset --</option> 

    @if (datasetNames == null)
    {
        <option disabled>Loading...</option>
    }
    else if (!datasetNames.Any())
    {
        <option disabled>No datasets available</option>
    }
    else
    {
        @foreach (var datasetName in datasetNames)
        {
            <option value="@datasetName">@datasetName.ToUpper()</option>
        }
    }
</select>

@code {
    [Inject] private ApiClient Api { get; set; } = default!;

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;

    private List<string> datasetNames = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            datasetNames = await Api.GetDatasetNamesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load datasets: {ex.Message}");
            datasetNames = new List<string>();
        }
    }

    private async Task OnChange(ChangeEventArgs e)
    {
        var newValue = e.Value?.ToString();
        Value = newValue;
        await ValueChanged.InvokeAsync(newValue);
    }
}
